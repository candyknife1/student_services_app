.charts-container {
    width: 100%;
    background: #ffffff;
    border-radius: 16rpx;
    padding: 20rpx;
    box-sizing: border-box;
}

.chart-title {
    font-size: 28rpx;
    color: #333333;
    text-align: center;
    margin-bottom: 20rpx;
}

.chart-wrapper {
    width: 100%;
    height: 1000rpx;
}

.chart-note {
    font-size: 24rpx;
    color: #999999;
    text-align: center;
    margin-top: 20rpx;
}

ec-canvas {
    width: 100%;
    height: 100%;
} 