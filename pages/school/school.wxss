.container {
  height: 100vh;
  display: flex;
  justify-content: center;
  align-items: center;
}

.developing {
  text-align: center;
}

.notice {
  display: block;
  margin-top: 20px;
  color: #666;
  font-size: 16px;
}

.page {
  padding: 20rpx;
  background-color: #f5f5f5;
  min-height: 100vh;
}

.input-group {
  margin-bottom: 20rpx;
}

.input-item {
  margin-bottom: 15rpx;
}

.label {
  font-size: 28rpx;
  color: #333;
}

.input {
  padding: 10rpx;
  border: 1rpx solid #ccc;
  border-radius: 5rpx;
  width: 100%;
  font-size: 28rpx;
  color: #333;
  background-color: #fff;
  box-shadow: 0 1rpx 3rpx rgba(0, 0, 0, 0.1);
}

.query-button {
  background-color: #1296db;
  color: #fff;
  padding: 10rpx;
  border-radius: 5rpx;
  text-align: center;
}

.result-section {
  margin-top: 20rpx;
}

.result-card {
  background: #fff;
  border-radius: 8rpx;
  padding: 15rpx;
  margin-bottom: 10rpx;
  box-shadow: 0 2rpx 5rpx rgba(0, 0, 0, 0.1);
}

.result-title {
  font-size: 24rpx;
  font-weight: bold;
}

.result-school,
.result-major,
.result-people,
.result-time {
  font-size: 20rpx;
  color: #666;
}

.debug-button {
  background-color: #ff9800;
  color: #fff;
  padding: 10rpx;
  border-radius: 5rpx;
  text-align: center;
  margin-top: 20rpx;
}

.banner {
  position: relative;
  width: 100%;
  height: 300rpx;
  border-radius: 16rpx;
  overflow: hidden;
  margin-bottom: 40rpx;
}

.banner-image {
  width: 100%;
  height: 100%;
}

.banner-text {
  position: absolute;
  bottom: 30rpx;
  left: 30rpx;
  color: #ffffff;
  font-size: 40rpx;
  font-weight: bold;
  text-shadow: 0 2rpx 4rpx rgba(0, 0, 0, 0.5);
}

.category-grid {
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
  margin-bottom: 40rpx;
}

.category-item {
  width: 30%;
  margin-bottom: 40rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.category-icon-wrapper {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  background-color: #ffffff;
  display: flex;
  justify-content: center;
  align-items: center;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
  margin-bottom: 20rpx;
}

.category-icon {
  width: 70rpx;
  height: 70rpx;
  object-fit: contain;
}

.category-name {
  font-size: 28rpx;
  color: #333333;
  text-align: center;
}

.info-button {
  background-color: #1296db;
  color: #ffffff;
  padding: 20rpx;
  border-radius: 40rpx;
  text-align: center;
  margin: 30rpx auto;
  font-size: 28rpx;
  width: 80%;
  display: block;
  box-shadow: 0 4rpx 12rpx rgba(18, 150, 219, 0.3);
}

.footer-note {
  text-align: center;
  font-size: 24rpx;
  color: #999999;
  margin-top: 30rpx;
  padding-bottom: 30rpx;
} 