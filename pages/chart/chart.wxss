.charts-container {
   display: flex;
   flex-direction: column;
   align-items: center;
   justify-content: space-between;
   box-sizing: border-box;
   padding: 20rpx;
}

.header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    width: 100%;
    margin-bottom: 20rpx;
}

.chart-title {
    font-size: 28rpx;
    color: #333333;
}

.refresh-btn {
    display: flex;
    align-items: center;
    padding: 10rpx 20rpx;
    background: #1296db;
    border-radius: 8rpx;
    color: #ffffff;
}

.refresh-btn text {
    font-size: 24rpx;
    line-height: 32rpx;
}

.building-selector {
    width: 100%;
    margin-bottom: 20rpx;
}

.picker-value {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 20rpx;
    background: #f8f8f8;
    border-radius: 8rpx;
    color: #333333;
}

.picker-value.placeholder {
    color: #999999;
}

.arrow-icon {
    font-size: 24rpx;
    color: #999999;
}

.update-time {
    width: 100%;
    text-align: right;
    font-size: 24rpx;
    color: #999999;
    margin-bottom: 10rpx;
}

.chart-wrapper {
    width: 750rpx;
    height: 1000rpx;
}

.chart-note {
    font-size: 24rpx;
    color: #999999;
    text-align: center;
    margin-top: 10rpx;
    width: 100%;
}

ec-canvas {
    width: 100%;
    height: 100%;
}

.footer {
    position: absolute;
    bottom: 80rpx;
    left: 50%;
    transform: translateX(-50%);
    width: 100%;
    display: flex;
    justify-content: center;
} 